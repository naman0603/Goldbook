<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="loginModel"
            type="com.goldbookapp.model.LoginModel" />

    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardOutwardTrasaction"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/gray_bg"
        app:cardCornerRadius="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.44"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvSalesDateTransaction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proxima_nova_regular"
                        android:text=""
                        android:layout_marginBottom="2dp"
                        android:ellipsize="end"
                        android:textColor="@color/gray_text"
                        android:textSize="@dimen/_10sdp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_blue_dot_12dp"
                        android:layout_gravity="center_vertical"
                        app:tint="@android:color/darker_gray"
                        android:layout_marginBottom="2dp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                       />

                    <TextView
                        android:id="@+id/tvSalesTimeTransaction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proxima_nova_regular"
                        android:text=""
                        android:layout_marginBottom="2dp"
                        android:ellipsize="end"
                        android:textColor="@color/gray_text"
                        android:textSize="@dimen/_10sdp" />


                </LinearLayout>


                <TextView
                    android:id="@+id/tvSalesVCTransaction"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:text=""
                    android:layout_marginBottom="2dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/tvSalesNumberTransaction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:text=""
                    android:layout_marginBottom="2dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/tvSalesTotalTransaction"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:text=""
                    android:ellipsize="end"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.56"
                android:weightSum="2"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvSalesOutwardTransactionOne"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proxima_nova_regular"
                        android:text=""
                        android:layout_marginBottom="2dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/outwardcolor"
                        android:textSize="@dimen/_10sdp" />
                    <TextView
                        android:id="@+id/tvSalesOutwardTransactionTwo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proxima_nova_regular"
                        android:text=""
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/outwardcolor"
                        android:textSize="@dimen/_10sdp" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvReceiptInwardTransactionOne"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proxima_nova_regular"
                        android:gravity="start"
                        android:text="1234567890"
                        android:layout_marginBottom="2dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/inwardcolor"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/tvReceiptInwardTransactionTwo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proxima_nova_regular"
                        android:gravity="start"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="1234567890"
                        android:textColor="@color/inwardcolor"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>





