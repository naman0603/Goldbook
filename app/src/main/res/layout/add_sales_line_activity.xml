<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="loginModel"
            type="com.goldbookapp.model.LoginModel" />

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <include layout="@layout/toolbar_layout"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            >

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAddItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/gray_bg"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="0dp"
                android:layout_gravity="center_vertical">


                <RadioGroup
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:id="@+id/rgAddSaleLine"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rbCashRecAddSaleLine"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Cash Receipt"
                        android:checked="true"
                        android:fontFamily="@font/proxima_nova_regular"
                        android:textSize="@dimen/_14sdp"/>

                    <RadioButton
                        android:id="@+id/rbCashPayAddSaleLine"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Cash Payment"
                        android:fontFamily="@font/proxima_nova_regular"
                        android:textSize="@dimen/_14sdp"/>

                    <RadioButton
                        android:id="@+id/rbBankRecAddSaleLine"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Bank Receipt"
                        android:fontFamily="@font/proxima_nova_regular"
                        android:textSize="@dimen/_14sdp"/>

                    <RadioButton
                        android:id="@+id/rbBankPayAddSaleLine"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Bank Payment"
                        android:fontFamily="@font/proxima_nova_regular"
                        android:textSize="@dimen/_14sdp"/>

                    <RadioButton
                        android:id="@+id/rbMetalRecAddSaleLine"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Metal Receipt"
                        android:fontFamily="@font/proxima_nova_regular"
                        android:textSize="@dimen/_14sdp"/>


                    <RadioButton
                        android:id="@+id/rbMetalPayAddSaleLine"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Metal Payment"
                        android:fontFamily="@font/proxima_nova_regular"
                        android:textSize="@dimen/_14sdp"/>

                    <RadioButton
                        android:id="@+id/rbAdjustAddSaleLine"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Adjustment"
                        android:fontFamily="@font/proxima_nova_regular"
                        android:textSize="@dimen/_14sdp"/>

                    <RadioButton
                        android:id="@+id/rbRateCutAddSaleLine"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Rate-Cut"
                        android:fontFamily="@font/proxima_nova_regular"
                        android:textSize="@dimen/_14sdp"/>
                </RadioGroup>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnNextAddSaleLine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_34sdp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="0dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:onClick="nextClicked"
                android:focusable="true"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/next"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:gravity="center"/>


            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>



    </LinearLayout>

</layout>