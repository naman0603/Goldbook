<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="loginModel"
            type="com.goldbookapp.model.LoginModel" />

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <include layout="@layout/toolbar_layout"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true">


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardChequeBook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/gray_bg"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="0dp">

                    <TextView
                        android:id="@+id/tvAddChequeBook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proxima_nova_bold"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/_10sdp"
                        android:text="+ Add another book"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_13sdp" />

                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:id="@+id/ly_cheque_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proxima_nova_regular"
                        android:text="Details"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_14sdp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/black"/>



                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewChequeRegister"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true" />


                </LinearLayout>
                <TextView
                    android:id="@+id/tvNoRecordCheque"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/no_record_found"
                    android:textSize="@dimen/_16sdp"
                    android:gravity="center_horizontal"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:visibility="gone"/>
            </LinearLayout>




    </LinearLayout>

</layout>