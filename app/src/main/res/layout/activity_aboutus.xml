<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="loginModel"
            type="com.goldbookapp.model.LoginModel" />

    </data>
    <LinearLayout
        android:id="@+id/ll_Root_aboutus"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">
        <include layout="@layout/toolbar_layout" />

    <RelativeLayout
        android:id="@+id/rlaboutus"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/aboutus_logo"
            android:layout_width="wrap_content"
            android:paddingLeft="@dimen/_50sdp"
            android:paddingRight="@dimen/_50sdp"
            android:src="@drawable/logo_color"
            android:layout_height="@dimen/_112sdp" />
        <TextView
            android:id="@+id/aboutus_tv_app_version"
            android:layout_below="@id/aboutus_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/proxima_nova_regular"
            android:text="Version 1.1"
            android:textSize="@dimen/_14sdp" />
        <Space
            android:id="@+id/about_space1"
            android:layout_below="@id/aboutus_tv_app_version"
            android:layout_width="0dp"
            android:layout_height="20dp"/>
        <LinearLayout
            android:layout_below="@id/about_space1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:padding="@dimen/_20sdp"
            >


            <TextView
                android:id="@+id/aboutus_desc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/proxima_nova_regular"
                android:text="@string/desc1"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_14sdp" />
            <TextView
                android:id="@+id/aboutus_desc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/proxima_nova_regular"
                android:text="@string/desc2"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_14sdp" />


                <Space
                    android:layout_width="0dp"
                    android:layout_height="40dp"/>


                <LinearLayout
                    android:id="@+id/about_ll_website"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="top">

                    <ImageView
                        android:id="@+id/about_iv_website"
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_aboutus_website"
                        app:tint="@color/colorPrimary"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>


                        <TextView
                            android:id="@+id/about_tv_website"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="www.goldbook.in"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/proxima_nova_regular"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:textSize="@dimen/_14sdp"/>






                </LinearLayout>
            <LinearLayout
                android:id="@+id/about_ll_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="top">

                <ImageView
                    android:id="@+id/about_iv_email"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_aboutus_email"
                    android:layout_marginEnd="@dimen/_15sdp"
                    app:tint="@color/colorPrimary"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>


                <TextView
                    android:id="@+id/about_tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="support@goldbook.in"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:textSize="@dimen/_14sdp"/>






            </LinearLayout>
            <LinearLayout
                android:id="@+id/about_ll_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:gravity="top">

                <ImageView
                    android:id="@+id/about_iv_phone"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_aboutus_phone"
                    app:tint="@color/colorPrimary"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>


                <TextView
                    android:id="@+id/about_tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9876543210"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:textSize="@dimen/_14sdp"/>






            </LinearLayout>



        </LinearLayout>



    </RelativeLayout>
    </LinearLayout>
</layout>