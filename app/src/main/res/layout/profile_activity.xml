<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="profileViewModel"
            type="com.goldbookapp.ui.activity.viewmodel.ProfileViewModel" />

    </data>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <include android:id="@+id/toolbar"
        layout="@layout/toolbar_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_marginTop="@dimen/_40sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/gray_bg"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_40sdp"
                    app:cardElevation="0dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_40sdp">

                        <ImageView
                            android:id="@+id/imgName"
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_name"
                            android:adjustViewBounds="true"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                            android:id="@+id/tvNameLbl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textColor="@color/gray_text"
                            android:textSize="@dimen/_14sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:fontFamily="@font/proxima_nova_regular"
                            app:layout_constraintStart_toEndOf="@+id/imgName"
                            app:layout_constraintTop_toTopOf="@id/imgName"
                            app:layout_constraintBottom_toBottomOf="@id/imgName"/>

                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{profileViewModel.profileDetail.data.user.name}"
                            android:textSize="@dimen/_14sdp"
                            android:singleLine="true"
                            android:ellipsize="end"
                            app:layout_constraintWidth_max="@dimen/_160sdp"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/proxima_nova_regular"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/imgName"
                            app:layout_constraintBottom_toBottomOf="@id/imgName"/>

                        <ImageView
                            android:id="@+id/imgDOB"
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:src="@drawable/ic_date_birth"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/imgName"/>

                        <TextView
                            android:id="@+id/tvDOBLbl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/date_of_birth"
                            android:textColor="@color/gray_text"
                            android:textSize="@dimen/_14sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:fontFamily="@font/proxima_nova_regular"
                            app:layout_constraintStart_toEndOf="@+id/imgDOB"
                            app:layout_constraintTop_toTopOf="@id/imgDOB"
                            app:layout_constraintBottom_toBottomOf="@id/imgDOB"/>

                        <TextView
                            android:id="@+id/tvDOB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{profileViewModel.profileDetail.data.user.date_of_birth}"
                            android:textSize="@dimen/_14sdp"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/proxima_nova_regular"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/imgDOB"
                            app:layout_constraintBottom_toBottomOf="@id/imgDOB"/>

                        <ImageView
                            android:id="@+id/imgGender"
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:src="@drawable/ic_gender"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/imgDOB"/>

                        <TextView
                            android:id="@+id/tvGenderLbl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gender"
                            android:textColor="@color/gray_text"
                            android:textSize="@dimen/_14sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:fontFamily="@font/proxima_nova_regular"
                            app:layout_constraintStart_toEndOf="@+id/imgGender"
                            app:layout_constraintTop_toTopOf="@id/imgGender"
                            app:layout_constraintBottom_toBottomOf="@id/imgGender"/>

                        <TextView
                            android:id="@+id/tvGender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{profileViewModel.profileDetail.data.user.gender}"
                            android:textSize="@dimen/_14sdp"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/proxima_nova_regular"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/imgGender"
                            app:layout_constraintBottom_toBottomOf="@id/imgGender"/>

                        <ImageView
                            android:id="@+id/imgPhone"
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:src="@drawable/ic_phone"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/imgGender"/>

                        <TextView
                            android:id="@+id/tvPhoneLbl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone #"
                            android:textColor="@color/gray_text"
                            android:textSize="@dimen/_14sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:fontFamily="@font/proxima_nova_regular"
                            app:layout_constraintStart_toEndOf="@+id/imgPhone"
                            app:layout_constraintTop_toTopOf="@id/imgPhone"
                            app:layout_constraintBottom_toBottomOf="@id/imgPhone"/>

                        <TextView
                            android:id="@+id/tvPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{profileViewModel.profileDetail.data.user.mobile_no}"
                            android:textSize="@dimen/_14sdp"
                            android:singleLine="true"
                            android:ellipsize="end"
                            app:layout_constraintWidth_max="@dimen/_160sdp"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/proxima_nova_regular"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/imgPhone"
                            app:layout_constraintBottom_toBottomOf="@id/imgPhone"/>

                        <ImageView
                            android:id="@+id/imgEmail"
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:src="@drawable/ic_email"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/imgPhone"/>

                        <TextView
                            android:id="@+id/tvEmailLbl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/email"
                            android:textColor="@color/gray_text"
                            android:textSize="@dimen/_14sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:fontFamily="@font/proxima_nova_regular"
                            app:layout_constraintStart_toEndOf="@+id/imgEmail"
                            app:layout_constraintTop_toTopOf="@id/imgEmail"
                            app:layout_constraintBottom_toBottomOf="@id/imgEmail"/>

                        <TextView
                            android:id="@+id/tvEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:ellipsize="end"
                            app:layout_constraintWidth_max="@dimen/_160sdp"
                            android:text="@{profileViewModel.profileDetail.data.user.email}"
                            android:textSize="@dimen/_14sdp"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/proxima_nova_regular"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/imgEmail"
                            app:layout_constraintBottom_toBottomOf="@id/imgEmail"/>

                        <ImageView
                            android:id="@+id/imgAppLang"
                            android:visibility="gone"
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:src="@drawable/ic_language"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/imgEmail"/>

                        <TextView
                            android:id="@+id/tvAppLangLbl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:text="@string/app_language"
                            android:textColor="@color/gray_text"
                            android:textSize="@dimen/_14sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:fontFamily="@font/proxima_nova_regular"
                            app:layout_constraintStart_toEndOf="@+id/imgAppLang"
                            app:layout_constraintTop_toTopOf="@id/imgAppLang"
                            app:layout_constraintBottom_toBottomOf="@id/imgAppLang"/>

                        <TextView
                            android:id="@+id/tvAppLang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{profileViewModel.profileDetail.data.user.language}"
                            android:textSize="@dimen/_14sdp"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/proxima_nova_regular"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/imgAppLang"
                            app:layout_constraintBottom_toBottomOf="@id/imgAppLang"/>

                        <ImageView
                            android:id="@+id/imgAppLangArrow"
                            android:layout_width="@dimen/_16sdp"
                            android:visibility="gone"
                            android:padding="@dimen/_5sdp"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:src="@drawable/ic_right_arrow"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/imgAppLang"
                            app:layout_constraintBottom_toBottomOf="@id/imgAppLang"/>

                        <ImageView
                            android:id="@+id/imgPassword"
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:src="@drawable/ic_password"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/imgAppLang"/>

                        <TextView
                            android:id="@+id/tvPasswordLbl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/password"
                            android:textColor="@color/gray_text"
                            android:textSize="@dimen/_14sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:paddingStart="@dimen/_15sdp"
                            android:fontFamily="@font/proxima_nova_regular"
                            app:layout_constraintStart_toEndOf="@+id/imgPassword"
                            app:layout_constraintTop_toTopOf="@id/imgPassword"
                            app:layout_constraintBottom_toBottomOf="@id/imgPassword"/>

                        <ImageView
                            android:id="@+id/imgPasswordArrow"
                            android:layout_width="@dimen/_16sdp"
                            android:padding="@dimen/_5sdp"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:clickable="false"
                            android:src="@drawable/ic_right_arrow"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/imgPassword"
                            app:layout_constraintBottom_toBottomOf="@id/imgPassword"/>


                        <ImageView
                            android:id="@+id/imgSecurity"
                            android:layout_width="@dimen/_16sdp"
                            android:visibility="gone"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:src="@drawable/ic_security"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/imgPassword"/>

                        <TextView
                            android:id="@+id/tvSecurityLbl"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/security"
                            android:textColor="@color/gray_text"
                            android:textSize="@dimen/_14sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:fontFamily="@font/proxima_nova_regular"
                            app:layout_constraintStart_toEndOf="@+id/imgSecurity"
                            app:layout_constraintTop_toTopOf="@id/imgSecurity"
                            app:layout_constraintBottom_toBottomOf="@id/imgSecurity"/>

                        <ImageView
                            android:id="@+id/imgSecurityArrow"
                            android:visibility="gone"
                            android:layout_width="@dimen/_16sdp"
                            android:padding="@dimen/_5sdp"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:src="@drawable/ic_right_arrow"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/imgSecurity"
                            app:layout_constraintBottom_toBottomOf="@id/imgSecurity"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <ImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    />

                <ImageView
                    android:id="@+id/imgAdd"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/_3sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerHorizontal="true"
                    android:layout_alignEnd="@id/imgProfile"
                    android:layout_alignBottom="@id/imgProfile"
                    android:src="@drawable/ic_add_photo"
                    android:visibility="gone"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

</layout>