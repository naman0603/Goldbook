<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="profileViewModel"
            type="com.goldbookapp.ui.activity.viewmodel.ProfileViewModel" />

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <include android:id="@+id/toolbar"
            layout="@layout/toolbar_layout"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none"
            android:layout_marginTop="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/gray_bg"
                        app:cardCornerRadius="@dimen/_5sdp"
                        android:layout_marginTop="0dp"
                        app:cardElevation="0dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/_10sdp"
                            android:weightSum="1"
                            android:gravity="center_vertical">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:orientation="vertical"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Organization"
                                    android:textColor="@android:color/darker_gray"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:textSize="@dimen/_14sdp"/>

                                <TextView
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="CEO"
                                    android:textColor="@android:color/darker_gray"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:textSize="@dimen/_14sdp"/>
                                <TextView
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Mobile #  "
                                    android:textColor="@android:color/darker_gray"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:textSize="@dimen/_14sdp"/>
                                <TextView
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Phone #"
                                    android:textColor="@android:color/darker_gray"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:textSize="@dimen/_14sdp"/>
                                <TextView
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Email"
                                    android:textColor="@android:color/darker_gray"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:textSize="@dimen/_14sdp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:orientation="vertical"
                                android:gravity="end"
                                android:layout_height="match_parent">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="1"
                                    android:orientation="horizontal">
                                    <Space
                                        android:layout_width="0dp"
                                        android:layout_weight="0.3"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:id="@+id/tvOrgDetailName"
                                        android:layout_width="0dp"
                                        android:layout_weight="0.7"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/proxima_nova_regular"
                                        android:text=""
                                        android:textAlignment="textEnd"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:textColor="@android:color/black"
                                        android:textSize="@dimen/_14sdp" />
                                </LinearLayout>



                                <TextView
                                    android:id="@+id/tvOrgDetailCeo"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:textSize="@dimen/_14sdp"/>
                                <TextView
                                    android:id="@+id/tvOrgDetailMobile"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:textSize="@dimen/_14sdp"/>
                                <TextView
                                    android:id="@+id/tvOrgDetailPhone"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:textSize="@dimen/_14sdp"/>
                                <TextView
                                    android:id="@+id/tvOrgDetailEmail"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:textSize="@dimen/_14sdp"/>

                            </LinearLayout>


                        </LinearLayout>



                    </com.google.android.material.card.MaterialCardView>

                    <ImageView
                        android:id="@+id/imgProfile"
                        android:visibility="gone"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_user_placeholder"/>

                    <ImageView
                        android:id="@+id/imgAdd"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:padding="@dimen/_3sdp"
                        android:layout_gravity="center_horizontal"
                        android:layout_centerHorizontal="true"
                        android:layout_alignEnd="@id/imgProfile"
                        android:layout_alignBottom="@id/imgProfile"
                        android:src="@drawable/ic_add_photo"
                        android:visibility="gone"/>

                </RelativeLayout>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/gray_bg"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp"
                        android:weightSum="1"
                        android:gravity="center_vertical">
                        <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:layout_height="wrap_content"
                                android:text="Address"
                                android:textColor="@android:color/darker_gray"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:textSize="@dimen/_14sdp"/>
                            <TextView
                                android:id="@+id/tvOrgDetailAddress"
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textAlignment="textEnd"
                                android:maxLines="4"
                                android:ellipsize="end"
                                android:textColor="@android:color/black"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:textSize="@dimen/_14sdp"/>
                        </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:orientation="vertical"
                            android:layout_height="match_parent">




                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:text="State "
                                android:textColor="@android:color/darker_gray"
                                android:textSize="@dimen/_14sdp" />

                            <TextView
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Country"
                                android:textColor="@android:color/darker_gray"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:textSize="@dimen/_14sdp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:text="City "
                                android:textColor="@android:color/darker_gray"
                                android:textSize="@dimen/_14sdp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:orientation="vertical"
                            android:gravity="end"
                            android:layout_height="match_parent">



                            <TextView
                                android:id="@+id/tvOrgDetailState"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textColor="@android:color/black"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:textSize="@dimen/_14sdp"/>
                            <TextView
                                android:id="@+id/tvOrgDetailCountry"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textColor="@android:color/black"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:textSize="@dimen/_14sdp"/>
                            <TextView
                                android:id="@+id/tvOrgDetailCity"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textColor="@android:color/black"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:textSize="@dimen/_14sdp"/>

                        </LinearLayout>
                    </LinearLayout>




                    </LinearLayout>



                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/gray_bg"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_10sdp"
                        android:weightSum="1"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:orientation="vertical"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Financial Year"
                                android:textColor="@android:color/darker_gray"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:textSize="@dimen/_14sdp"/>
                            <TextView
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Organization Type"
                                android:textColor="@android:color/darker_gray"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:textSize="@dimen/_14sdp"/>
                            <TextView
                                android:id="@+id/tvOrgDetailLeftGSTIN"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="GSTIN"
                                android:textColor="@android:color/darker_gray"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:textSize="@dimen/_14sdp"/>

                            <TextView
                                android:id="@+id/tvOrgDetailLeftPAN"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="PAN"
                                android:textColor="@android:color/darker_gray"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:textSize="@dimen/_14sdp"/>
                            <TextView
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="CIN"
                                android:textColor="@android:color/darker_gray"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:textSize="@dimen/_14sdp"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:orientation="vertical"
                            android:gravity="end"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/tvOrgDetailFinYear"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@android:color/black"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:textSize="@dimen/_14sdp"/>
                            <TextView
                                android:id="@+id/tvOrgDetailOrgType"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textColor="@android:color/black"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:textSize="@dimen/_14sdp"/>
                            <TextView
                                android:id="@+id/tvOrgDetailGSTIN"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textColor="@android:color/black"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:textSize="@dimen/_14sdp"/>

                            <TextView
                                android:id="@+id/tvOrgDetailPAN"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textColor="@android:color/black"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:textSize="@dimen/_14sdp"/>
                            <TextView
                                android:id="@+id/tvOrgDetailCIN"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textColor="@android:color/black"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:textSize="@dimen/_14sdp"/>


                        </LinearLayout>


                    </LinearLayout>



                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>