<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="loginModel"
            type="com.goldbookapp.model.LoginModel" />

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:orientation="vertical">
    <TextView
        android:id="@+id/contact_trans_row1_column1"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_5sdp"
        android:textColor="@android:color/black"
        android:text="INV-1022, Earrings"
        android:fontFamily="@font/proxima_nova_regular"
        android:textSize="@dimen/_12sdp"/>
        <LinearLayout
            android:id="@+id/ll_contact_trans_row1"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:paddingTop="@dimen/_3sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/contact_trans_row2_column1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="01-May-2021"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@android:color/black"
                android:fontFamily="@font/proxima_nova_regular"
                android:textSize="@dimen/_12sdp"/>

            <TextView
                android:id="@+id/contact_trans_row2_column2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="F.W.: 9999.999"
                android:singleLine="true"
                android:ellipsize="end"
               android:textAlignment="center"
                android:textColor="@android:color/black"
                android:fontFamily="@font/proxima_nova_regular"
                android:textSize="@dimen/_12sdp"/>
            <TextView
                android:id="@+id/contact_trans_row2_column3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="1â‚¹99,99,999.00"
                android:singleLine="true"
                android:ellipsize="end"
                android:textAlignment="textEnd"
                android:textColor="@android:color/black"
                android:fontFamily="@font/proxima_nova_regular"
                android:textSize="@dimen/_12sdp"/>

        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:visibility="gone"
            android:id="@+id/contact_trans_rv_cashbankentries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"/>
    </LinearLayout>

</layout>