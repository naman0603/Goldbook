<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="@dimen/_10sdp"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/gray_bg"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/_5sdp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:text="@string/updateversionmsg"
                        android:gravity="start"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:textColor="@color/header_black_text"
                        android:fontFamily="@font/proxima_nova_bold"
                        android:textSize="@dimen/_14sdp"/>



                </LinearLayout>

            </LinearLayout>

<!--            <com.google.android.material.card.MaterialCardView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                app:cardCornerRadius="@dimen/_5sdp"-->
<!--                app:cardBackgroundColor="@color/gray_bg"-->

<!--                android:layout_gravity="center_vertical">-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:weightSum="2"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_weight="1"
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_weight="0.3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_weight="0.7"
                            android:weightSum="2"
                            android:layout_width="0dp"
                            android:gravity="end"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/appupdateCancel"
                                android:visibility="gone"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_height="wrap_content"
                                android:text="Cancel"
                                android:textColor="@color/header_black_text"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:textSize="@dimen/_14sdp"/>
                            <TextView
                                android:id="@+id/appupdateCancelCloseApp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Update"
                                android:padding="@dimen/_5sdp"
                                android:textStyle="bold"
                                android:backgroundTint="@color/colorPrimaryDark"
                                android:background="@drawable/bg_round_rect_ripple_effect"
                                android:textAlignment="center"
                                android:textColor="@android:color/white"
                                android:fontFamily="@font/proxima_nova_bold"
                                android:textSize="@dimen/_13sdp"/>
                        </LinearLayout>
                    </LinearLayout>





                </LinearLayout>
<!--            </com.google.android.material.card.MaterialCardView>-->





        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>