<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="loginModel"
            type="com.goldbookapp.model.LoginModel" />

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <include layout="@layout/toolbar_layout"/>

        <LinearLayout
            android:id="@+id/llPaymentref"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/gray_bg"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="0dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/txtSearchPaymentRef"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_14sdp"
                        android:drawableStart="@drawable/ic_search_black_24dp"
                        android:drawablePadding="@dimen/_10sdp"
                        android:inputType="text|textNoSuggestions"
                        android:imeOptions="actionDone"
                        android:background="@android:color/transparent"
                        android:hint="Search"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipeContainerPaymentRef"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>-->

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewPaymentRef"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvNoRecordPaymentRef"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_record_found"
                android:textSize="@dimen/_16sdp"
                android:gravity="center_horizontal"
                android:layout_centerInParent="true"
                android:fontFamily="@font/proxima_nova_regular"
                android:visibility="gone"/>


        </RelativeLayout>



    </LinearLayout>

</layout>