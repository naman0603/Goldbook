<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="loginModel"
            type="com.goldbookapp.model.LoginModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_10sdp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <include layout="@layout/toolbar_layout"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/llEditReceipt"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/gray_bg"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="0dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp"
                        android:gravity="center_vertical">


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tvContactEditReceipt"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Contact Name"

                            app:endIconDrawable="@drawable/ic_keyboard_arrow_down_white_24dp"
                            app:endIconMode="custom"
                            app:endIconTint="@color/drop_down_arrow_color">

                            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                                android:id="@+id/txtContactEditReceipt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/gray_bg"
                                android:paddingStart="0dp"
                                android:paddingEnd="0dp"
                                android:ellipsize="end"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:imeOptions="actionDone"
                                android:inputType="textCapWords|textNoSuggestions"
                                android:singleLine="true" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:weightSum="1">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:text="Opening Bal :"
                                android:textColor="@android:color/black"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:textSize="@dimen/_14sdp"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="0.5">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/tvOpenBalFineEditReceipt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textColor="@color/red"
                                        android:fontFamily="@font/proxima_nova_regular"
                                        android:textSize="@dimen/_14sdp"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textColor="@android:color/black"
                                        android:fontFamily="@font/proxima_nova_regular"
                                        android:textSize="@dimen/_14sdp"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/tvOpenBalCashEditReceipt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textColor="@color/green"
                                        android:fontFamily="@font/proxima_nova_regular"
                                        android:textSize="@dimen/_14sdp"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textColor="@android:color/black"
                                        android:fontFamily="@font/proxima_nova_regular"
                                        android:textSize="@dimen/_14sdp"/>
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tvReceiptEditReceipt"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:hint="Receipt No.">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txtReceiptEditReceipt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/gray_bg"
                                android:paddingStart="0dp"
                                android:paddingEnd="0dp"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:inputType="numberDecimal"
                                android:enabled="false"
                                />

                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tvDateEditReceipt"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:hint="Date">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txtDateEditReceipt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/gray_bg"
                                android:paddingStart="0dp"
                                android:paddingEnd="0dp"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:inputType="date"
                                android:clickable="true"
                                android:focusable="false"
                                />

                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/checkAgainstRefEditReceipt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:buttonTint="@color/colorPrimary"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:text="Against Reference?"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/proxima_nova_regular"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tvRefNoEditReceipt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"

                            android:layout_marginTop="@dimen/_10sdp"
                            android:hint="Reference No.">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txtRefNoEditReceipt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/gray_bg"
                                android:paddingStart="0dp"
                                android:paddingEnd="0dp"
                                android:focusableInTouchMode="false"
                                android:clickable="true"
                                android:focusable="false"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:inputType="number"
                                />

                        </com.google.android.material.textfield.TextInputLayout>



                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>



                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardAddRecLineEditReceipt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/gray_bg"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="0dp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvAddRecEditReceipt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_10sdp"
                        android:gravity="center_horizontal"
                        android:text="+ Add Receipt line"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/proxima_nova_bold"
                        android:textSize="@dimen/_13sdp"/>

                </com.google.android.material.card.MaterialCardView>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_20sdp"/>
                <LinearLayout
                    android:id="@+id/linear_calculation_view_editReceipt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@android:color/black"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="Particulars"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/proxima_nova_bold"
                            android:textSize="@dimen/_12sdp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:gravity="end"
                            android:text="Qty/Fine Wt."
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/proxima_nova_bold"
                            android:textSize="@dimen/_12sdp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@android:color/black"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_editReceipt_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"/>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        android:paddingLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.33"
                            android:gravity="start"
                            android:text="Sub-Total:"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/proxima_nova_bold"
                            android:textSize="@dimen/_12sdp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="0.28">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Fine Wt :"
                                android:gravity="start"
                                android:textColor="@android:color/black"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:textSize="@dimen/_12sdp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Cash &amp; Bank :"
                                android:gravity="start"
                                android:textColor="@android:color/black"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:textSize="@dimen/_12sdp"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_gravity="end"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:background="@android:color/black"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="0.39">
                            <TextView
                                android:id="@+id/tvSubTotFineWtEditReceipt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="380.780 gm"
                                android:gravity="end"
                                android:textColor="@android:color/black"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:textSize="@dimen/_12sdp"/>
                            <TextView
                                android:id="@+id/tvSubTotCashEditReceipt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="$ 1,00,000"
                                android:gravity="end"
                                android:textColor="@android:color/black"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:textSize="@dimen/_12sdp"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_gravity="end"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:background="@android:color/black"/>
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        android:paddingLeft="@dimen/_15sdp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.33"
                            android:gravity="start"
                            android:text="Closing Bal :"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/proxima_nova_bold"
                            android:textSize="@dimen/_12sdp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="0.28">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Fine Wt :"
                                android:gravity="start"
                                android:textColor="@android:color/black"
                                android:fontFamily="@font/proxima_nova_bold"
                                android:textSize="@dimen/_12sdp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Cash :"
                                android:gravity="start"
                                android:textColor="@android:color/black"
                                android:fontFamily="@font/proxima_nova_bold"
                                android:textSize="@dimen/_12sdp"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="0.39">
                            <TextView
                                android:id="@+id/tvCloBalFineWtEditReceipt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0.00 gm"
                                android:gravity="end"
                                android:textColor="@android:color/black"
                                android:fontFamily="@font/proxima_nova_bold"
                                android:textSize="@dimen/_12sdp"/>
                            <TextView
                                android:id="@+id/tvCloBalCashEditReceipt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="$ 1,00,000"
                                android:gravity="end"
                                android:textColor="@color/red"
                                android:fontFamily="@font/proxima_nova_bold"
                                android:textSize="@dimen/_12sdp"/>

                        </LinearLayout>
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@android:color/black"/>

                </LinearLayout>


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/gray_bg"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="0dp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp"
                        android:gravity="center_vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:hint="Remarks">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/tv_editReceipt_remarks"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/gray_bg"
                                android:paddingStart="0dp"
                                android:paddingEnd="0dp"
                                android:singleLine="true"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:inputType="text|textNoSuggestions"
                                />

                        </com.google.android.material.textfield.TextInputLayout>


                        <TextView
                            android:id="@+id/tv_attachment_label_editReceipt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/_11sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:textColor="@android:color/black"
                            android:text="Attachment:"
                            android:fontFamily="@font/proxima_nova_regular"/>

                        <TextView
                            android:id="@+id/tvEditReceiptUploadphoto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/colorPrimary"
                            android:text="+ Click or upload photo"
                            android:fontFamily="@font/proxima_nova_regular"/>
                        <ImageView
                            android:id="@+id/ivEditReceiptAttachment"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:visibility="gone"
                            android:layout_gravity="left"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </LinearLayout>
        <com.robertlevonyan.views.customfloatingactionbutton.FloatingActionButton
            android:id="@+id/btnSave_EditReceipt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/_15sdp"
            android:fontFamily="@font/proxima_nova_bold"
            android:padding="@dimen/_5sdp"
            android:text="Save"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_13sdp"
            app:fabRippleColor="@color/gray_text"
            app:fabElevation="5dp"
            app:fabIconPosition="start"
            app:fabSizes="normal"
            app:fabType="circle" />
    </RelativeLayout>

</layout>