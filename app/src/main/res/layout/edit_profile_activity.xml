<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="editProfileViewModel"
            type="com.goldbookapp.ui.activity.viewmodel.EditProfileViewModel" />

    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_10sdp">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <include android:id="@+id/toolbar"
        layout="@layout/toolbar_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/gray_bg"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_40sdp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_30sdp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tvNameEditInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@android:color/transparent"
                            android:hint="Name"

                            android:textColorHint="@color/colorPrimary">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txtNameEdit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:inputType="textCapWords|textNoSuggestions"
                                android:imeOptions="actionDone"
                                android:maxLength="29"
                                android:paddingStart="0dp"
                                android:paddingEnd="0dp"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="@{editProfileViewModel.profileDetail.data.user.name}" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tvDOBEditInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:hint="Date of Birth"

                            android:textColorHint="@color/colorPrimary">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txtDOBEdit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:inputType="textCapCharacters"
                                android:clickable="true"
                                android:paddingStart="0dp"
                                android:paddingEnd="0dp"
                                android:focusable="false"
                                android:text="@{editProfileViewModel.profileDetail.data.user.date_of_birth}" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tvGenderEditInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:hint="Gender"

                            android:textColorHint="@color/colorPrimary">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txtGenderEdit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textPersonName|textNoSuggestions"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:drawableEnd="@drawable/ic_keyboard_arrow_down_white"
                                android:drawableTint="@color/drop_down_arrow_color"
                                android:clickable="true"
                                android:paddingStart="0dp"
                                android:paddingEnd="0dp"
                                android:focusable="false"
                                android:text="@{editProfileViewModel.profileDetail.data.user.gender}"
                                android:textColor="@android:color/black"
                                android:background="@android:color/transparent"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="@dimen/_20sdp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/contact_information"
                                android:textColor="@color/header_black_text"
                                android:fontFamily="@font/proxima_nova_bold"
                                android:textSize="@dimen/_16sdp"/>

                            <ImageView
                                android:id="@+id/imgEditContact"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:src="@drawable/ic_edit"
                                android:adjustViewBounds="true"
                                android:padding="@dimen/_8sdp"/>

                        </LinearLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:hint="Phone#"

                            android:enabled="false"
                            android:textColorHint="@color/colorPrimary">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txtPhoneEditProfile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="phone"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:maxLength="12"
                                android:paddingStart="0dp"
                                android:paddingEnd="0dp"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="@{editProfileViewModel.profileDetail.data.user.mobile_no}"
                                android:background="@android:color/transparent"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:hint="Email"

                            android:enabled="false"
                            android:textColorHint="@color/colorPrimary">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txtEmailEditProfile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textEmailAddress"
                                android:maxLength="35"
                                android:singleLine="true"
                                android:paddingStart="0dp"
                                android:paddingEnd="0dp"
                                android:ellipsize="end"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:text="@{editProfileViewModel.profileDetail.data.user.email}"
                                android:background="@android:color/transparent"/>

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <ImageView
                    android:id="@+id/imgProfileEdit"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    />

                <ImageView
                    android:id="@+id/imgAdd"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/_3sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerHorizontal="true"
                    android:layout_alignEnd="@id/imgProfileEdit"
                    android:layout_alignBottom="@id/imgProfileEdit"
                    android:src="@drawable/ic_add_photo"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
        <com.robertlevonyan.views.customfloatingactionbutton.FloatingActionButton
            android:id="@+id/btnSaveEditProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/_15sdp"
            android:fontFamily="@font/proxima_nova_bold"
            android:padding="@dimen/_5sdp"
            android:text="Save"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_13sdp"
            app:fabRippleColor="@color/gray_text"
            app:fabElevation="5dp"
            app:fabIconPosition="start"
            app:fabSizes="normal"
            app:fabType="circle" />

    </RelativeLayout>
</layout>