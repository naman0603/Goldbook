<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="@dimen/_10sdp"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/_5sdp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:text="Current Branch"
                        android:gravity="start"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:textColor="@color/header_black_text"
                        android:fontFamily="@font/proxima_nova_regular"
                        android:textSize="@dimen/_13sdp"/>
                    <TextView
                        android:id="@+id/tvbranchSwitchCurrentBranch"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="Head Office"
                        android:gravity="start"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:textColor="@color/header_black_text"
                        android:fontFamily="@font/proxima_nova_bold"
                        android:textSize="@dimen/_16sdp"/>
                    <TextView
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:text="View details"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:gravity="start"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/proxima_nova_regular"
                        android:textSize="@dimen/_13sdp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:text="Switch To"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:gravity="start"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:textColor="@color/header_black_text"
                        android:fontFamily="@font/proxima_nova_regular"
                        android:textSize="@dimen/_14sdp"/>


                </LinearLayout>

            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tvbranchSwichBranchName"
                android:enabled="false"
                android:layout_marginStart="@dimen/_5sdp"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIconDrawable="@drawable/ic_keyboard_arrow_down_white"
                app:endIconTint="@color/drop_down_arrow_color"
                android:hint="@string/branch_name">

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/txtbranchSwitchName"
                    android:backgroundTint="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:clickable="true"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:focusable="false"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:focusableInTouchMode="false"
                    android:editable="false"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_weight="1"
                android:weightSum="1"
                android:paddingBottom="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:paddingTop="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_weight="0.6"
                    android:weightSum="2"
                    android:layout_width="0dp"
                    android:gravity="end"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvbranchSwitchCancel"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:text="CANCEL"
                        android:textColor="@color/header_black_text"
                        android:fontFamily="@font/proxima_nova_bold"
                        android:textSize="@dimen/_13sdp"/>
                    <TextView
                        android:id="@+id/tvbranchSwitchSave"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="SAVE"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/proxima_nova_bold"
                        android:textSize="@dimen/_13sdp"/>
                </LinearLayout>
            </LinearLayout>





        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>