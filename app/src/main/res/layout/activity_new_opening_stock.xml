<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="loginModel"
            type="com.goldbookapp.model.LoginModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_10sdp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">

            <include layout="@layout/toolbar_layout"/>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/ll_pbm_root"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:clickable="true">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/gray_bg"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="0dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_10sdp"
                            android:gravity="center_vertical">


                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:enabled="false"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:hint="Voucher#">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/txtVoucherNoOPS"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/gray_bg"
                                    android:paddingStart="0dp"
                                    android:paddingEnd="0dp"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:inputType="textCapCharacters|textNoSuggestions"
                                    />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/tvDateOPS"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:hint="Date">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/txtDateOPS"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/gray_bg"
                                    android:paddingStart="0dp"
                                    android:paddingEnd="0dp"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:inputType="date"
                                    android:clickable="true"
                                    android:focusable="false"
                                    android:cursorVisible="false"
                                    />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:enabled="true"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:hint="Reference Number">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/txtReferenceNoOPS"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/gray_bg"
                                    android:paddingStart="0dp"
                                    android:paddingEnd="0dp"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:inputType="text"
                                    />

                            </com.google.android.material.textfield.TextInputLayout>


                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>



                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardAddItemOPS"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/gray_bg"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="0dp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvAddItemOS"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10sdp"
                            android:gravity="center_horizontal"
                            android:text="+ Add an item"
                            android:textColor="@color/colorPrimary"
                            android:fontFamily="@font/proxima_nova_bold"
                            android:textSize="@dimen/_13sdp"/>

                    </com.google.android.material.card.MaterialCardView>
                    <LinearLayout
                        android:id="@+id/linear_calculation_view_openingStock"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <View
                            android:id="@+id/v1_newopeningStock"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:background="@android:color/black"/>


                        <LinearLayout
                            android:id="@+id/ll_newopeningStock_itemdetail_heading"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="1"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_newopeningStock_left_items"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:text="Particulars"
                                android:textColor="@android:color/black"
                                android:fontFamily="@font/proxima_nova_bold"
                                android:textSize="@dimen/_12sdp"/>

                            <TextView
                                android:id="@+id/tv_newopeningStock_right_qty_finewt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:gravity="end"
                                android:text="Qty/Fine Wt."
                                android:textColor="@android:color/black"
                                android:fontFamily="@font/proxima_nova_bold"
                                android:textSize="@dimen/_12sdp"/>

                        </LinearLayout>

                        <View
                            android:id="@+id/v2_newopeningStock"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@android:color/black"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_newopeningStock_item"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"/>

                        <LinearLayout
                            android:id="@+id/ll_newopeningStock_metalweights"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="1"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_newopeningStock_left_metal_wt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.3"
                                android:gravity="end"
                                android:text="Metal Weights:"
                                android:textColor="@android:color/black"
                                android:fontFamily="@font/proxima_nova_bold"
                                android:textSize="@dimen/_12sdp"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="0.35">
                                <TextView
                                    android:id="@+id/tv_newopeningStock_left_gross_wt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Gross Wt:"
                                    android:gravity="end"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:textSize="@dimen/_12sdp"/>

                                <TextView
                                    android:id="@+id/tv_newopeningStock_left_less_wt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Less Wt:"
                                    android:gravity="end"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:textSize="@dimen/_12sdp"/>
                                <TextView
                                    android:id="@+id/tv_newopeningStock_left_net_wt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Net Wt:"
                                    android:gravity="end"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:textSize="@dimen/_12sdp"/>
                                <TextView
                                    android:id="@+id/tv_newopeningStock_left_fine_wt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Fine Wt:"
                                    android:gravity="end"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/proxima_nova_bold"
                                    android:textSize="@dimen/_12sdp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="0.35">
                                <TextView
                                    android:id="@+id/tv_newopeningStock_gross_wt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="380.780 gm"
                                    android:gravity="end"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:textSize="@dimen/_12sdp"/>
                                <TextView
                                    android:id="@+id/tv_newopeningStock_less_wt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="2.000 gm"
                                    android:gravity="end"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:textSize="@dimen/_12sdp"/>
                                <TextView
                                    android:id="@+id/tv_newopeningStock_net_wt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:gravity="end"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:textSize="@dimen/_12sdp"/>
                                <TextView
                                    android:id="@+id/tv_newopeningStock_fine_wt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="350.115 "
                                    android:gravity="end"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/proxima_nova_bold"
                                    android:textSize="@dimen/_12sdp"/>

                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>



                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/gray_bg"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="0dp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:layout_gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_10sdp"
                            android:gravity="center_vertical">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/tvRemarkOPS"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:hint="Remarks">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/txtRemarkOPS"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/gray_bg"
                                    android:paddingStart="0dp"
                                    android:paddingEnd="0dp"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:inputType="text"
                                    />

                            </com.google.android.material.textfield.TextInputLayout>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textSize="@dimen/_11sdp"
                                android:visibility="gone"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:textColor="@android:color/black"
                                android:text="Attachment:"
                                android:fontFamily="@font/proxima_nova_regular"/>

                            <TextView
                                android:id="@+id/tv_pbm_uploadphoto"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textSize="@dimen/_11sdp"
                                android:visibility="gone"
                                android:textColor="@color/colorPrimary"
                                android:text="+ Click or upload photo"
                                android:fontFamily="@font/proxima_nova_regular"/>
                            <ImageView
                                android:id="@+id/iv_pbm_attachment"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:visibility="gone"
                                android:layout_gravity="left"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>


                </LinearLayout>

            </androidx.core.widget.NestedScrollView>


        </LinearLayout>

        <com.robertlevonyan.views.customfloatingactionbutton.FloatingActionButton
            android:id="@+id/btnSave_AddOpeningStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/_15sdp"
            android:fontFamily="@font/proxima_nova_bold"
            android:padding="@dimen/_5sdp"
            android:text="Save"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_13sdp"
            app:fabRippleColor="@color/gray_text"
            app:fabElevation="5dp"
            app:fabIconPosition="start"
            app:fabSizes="normal"
            app:fabType="circle" />

    </RelativeLayout>
</layout>