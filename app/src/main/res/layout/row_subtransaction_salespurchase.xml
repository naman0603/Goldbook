<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="loginModel"
            type="com.goldbookapp.model.LoginModel" />

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_5sdp"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/spr_tv_column1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="INV-1022, Earrings"
            android:textColor="@android:color/black"
            android:fontFamily="@font/proxima_nova_regular"
            android:textSize="@dimen/_12sdp"/>


        <TextView
            android:id="@+id/spr_tv_column2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="01 Mar 2021"
            android:textAlignment="textEnd"
            android:textColor="@android:color/black"
            android:fontFamily="@font/proxima_nova_regular"
            android:textSize="@dimen/_12sdp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:paddingTop="@dimen/_2sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/spr_tv_row2_column1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="N.W.: 9999.999"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@android:color/black"
            android:fontFamily="@font/proxima_nova_regular"
            android:textSize="@dimen/_12sdp"/>

        <TextView
            android:id="@+id/spr_tv_row2_column2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="N.W.: 9999.999"
            android:singleLine="true"
            android:ellipsize="end"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:fontFamily="@font/proxima_nova_regular"
            android:textSize="@dimen/_12sdp"/>
        <TextView
            android:id="@+id/spr_tv_row2_column3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="â‚¹99,99,999.00"
            android:singleLine="true"
            android:ellipsize="end"
            android:textAlignment="textEnd"
            android:textColor="@android:color/black"
            android:fontFamily="@font/proxima_nova_regular"
            android:textSize="@dimen/_12sdp"/>


    </LinearLayout>
    </LinearLayout>
</layout>