<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="loginModel"
            type="com.goldbookapp.model.LoginModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_layout" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/gray_bg"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_60sdp"
                        android:orientation="horizontal"
                        android:weightSum="1">
                        <ImageView
                            android:id="@+id/imgDrawerProfile"
                            android:layout_width="@dimen/_55sdp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_user_placeholder"
                            />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="0.9"
                            android:layout_marginTop="@dimen/_10sdp">

                            <TextView
                                android:id="@+id/tvDrawerUserName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_centerVertical="true"
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:text=""
                                android:paddingLeft="@dimen/_5sdp"
                                android:fontFamily="@font/proxima_nova_bold"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_14sdp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_centerVertical="true"
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:text="Change Profile"
                                android:paddingLeft="@dimen/_5sdp"
                                android:fontFamily="@font/proxima_nova_medium"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>
                        <ImageView
                            android:layout_width="@dimen/_6sdp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_right_arrow"
                            android:layout_gravity="end"
                            />


                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/gray_bg"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/llSettingOrgs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:weightSum="1"
                            android:padding="@dimen/_10sdp"
                            >

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="0.10"
                                android:layout_height="@dimen/_16sdp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_organizations" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.8"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:fontFamily="@font/proxima_nova_medium"
                                android:text="Organizations"
                                android:textColor="@color/blackcolor"
                                android:textSize="@dimen/_14sdp" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="0.10"
                                android:layout_height="@dimen/_10sdp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_right_arrow" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llSettingBranches"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:weightSum="1"
                            android:padding="@dimen/_10sdp">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="0.1"
                                android:layout_height="@dimen/_16sdp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_branches" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.8"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:fontFamily="@font/proxima_nova_medium"
                                android:text="Branches"
                                android:textColor="@color/blackcolor"
                                android:textSize="@dimen/_14sdp" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="0.10"
                                android:layout_height="@dimen/_10sdp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_right_arrow" />

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/llSettingItemCategory"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:weightSum="1"
                            android:padding="@dimen/_10sdp">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="0.1"
                                android:layout_height="@dimen/_16sdp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_items" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.8"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:fontFamily="@font/proxima_nova_medium"
                                android:text="Item Categories"
                                android:textColor="@color/blackcolor"
                                android:textSize="@dimen/_14sdp" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="0.10"
                                android:layout_height="@dimen/_10sdp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_right_arrow" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/gray_bg"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/llSettingPref"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:weightSum="1"
                            android:padding="@dimen/_10sdp"
                            >

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="0.10"
                                android:layout_height="@dimen/_16sdp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_preferences_setting" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.8"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:fontFamily="@font/proxima_nova_medium"
                                android:text="Preferences"
                                android:textColor="@color/blackcolor"
                                android:textSize="@dimen/_14sdp" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="0.10"
                                android:layout_height="@dimen/_10sdp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_right_arrow" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llSettingTaxes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:weightSum="1"
                            android:padding="@dimen/_10sdp">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="0.1"
                                android:layout_height="@dimen/_16sdp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_taxes" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.8"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:fontFamily="@font/proxima_nova_medium"
                                android:text="Taxes"
                                android:textColor="@color/blackcolor"
                                android:textSize="@dimen/_14sdp" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="0.10"
                                android:layout_height="@dimen/_10sdp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_right_arrow" />

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/llSettingContact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:weightSum="1"
                            android:visibility="gone"
                            android:padding="@dimen/_10sdp">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="0.1"
                                android:layout_height="@dimen/_16sdp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_contacts" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.8"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:fontFamily="@font/proxima_nova_medium"
                                android:text="Contacts"
                                android:textColor="@color/blackcolor"
                                android:textSize="@dimen/_14sdp" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="0.10"
                                android:layout_height="@dimen/_10sdp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_right_arrow" />

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/llSettingItemInventory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:weightSum="1"
                            android:padding="@dimen/_10sdp">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="0.1"
                                android:layout_height="@dimen/_16sdp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_item_inventory" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.8"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:fontFamily="@font/proxima_nova_medium"
                                android:text="@string/item_inventory"
                                android:textColor="@color/blackcolor"
                                android:textSize="@dimen/_14sdp" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="0.10"
                                android:layout_height="@dimen/_10sdp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_right_arrow" />

                        </LinearLayout>
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/gray_bg"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10sdp"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_24sdp"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_preferences_setting" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:fontFamily="@font/proxima_nova_medium"
                                android:text="Preference"
                                android:textColor="@color/blackcolor"
                                android:textSize="@dimen/_14sdp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10sdp"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_24sdp"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_app_language" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:fontFamily="@font/proxima_nova_medium"
                                android:text="App Language"
                                android:textColor="@color/blackcolor"
                                android:textSize="@dimen/_14sdp" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/gray_bg"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10sdp"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_16sdp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_sms_alerts" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:fontFamily="@font/proxima_nova_medium"
                                android:text="SMS Alerts"
                                android:textColor="@color/blackcolor"
                                android:textSize="@dimen/_14sdp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10sdp"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_16sdp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_in_app_notifications" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:fontFamily="@font/proxima_nova_medium"
                                android:text="In-app Notifications"
                                android:textColor="@color/blackcolor"
                                android:textSize="@dimen/_14sdp" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/gray_bg"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/linearPrivacySecurity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10sdp"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:weightSum="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="0.1"
                                android:layout_height="@dimen/_16sdp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_privacy_security" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.8"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:fontFamily="@font/proxima_nova_medium"
                                android:text="@string/privacy_and_security"
                                android:textColor="@color/blackcolor"
                                android:textSize="@dimen/_14sdp" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="0.10"
                                android:layout_height="@dimen/_10sdp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_right_arrow" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearSubscription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10sdp"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:weightSum="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="0.1"
                                android:layout_height="@dimen/_16sdp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_subscription" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.8"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:fontFamily="@font/proxima_nova_medium"
                                android:text="Subscription"
                                android:textColor="@color/blackcolor"
                                android:textSize="@dimen/_14sdp" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="0.10"
                                android:layout_height="@dimen/_10sdp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_right_arrow" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearAboutus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10sdp"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:weightSum="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="0.1"
                                android:layout_height="@dimen/_16sdp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_about" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.8"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:fontFamily="@font/proxima_nova_medium"
                                android:text="About"
                                android:textColor="@color/blackcolor"
                                android:textSize="@dimen/_14sdp" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="0.10"
                                android:layout_height="@dimen/_10sdp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_right_arrow" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>