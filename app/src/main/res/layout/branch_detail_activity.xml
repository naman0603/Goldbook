<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="profileViewModel"
            type="com.goldbookapp.ui.activity.viewmodel.ProfileViewModel" />

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <include android:id="@+id/toolbar"
            layout="@layout/toolbar_layout"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none"
            android:layout_marginTop="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true">



                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/gray_bg"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="0dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/_10sdp"
                            android:weightSum="1"
                            android:gravity="center_vertical">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:orientation="vertical"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Branch Name"
                                    android:textColor="@android:color/darker_gray"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:textSize="@dimen/_14sdp"/>
                                <TextView
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Branch Code"
                                    android:textColor="@android:color/darker_gray"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:textSize="@dimen/_14sdp"/>

                                <TextView
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Contact Person"
                                    android:textColor="@android:color/darker_gray"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:textSize="@dimen/_14sdp"/>

                                <TextView
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Mobile #"
                                    android:textColor="@android:color/darker_gray"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:textSize="@dimen/_14sdp"/>
                                <TextView
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Phone #  "
                                    android:textColor="@android:color/darker_gray"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:textSize="@dimen/_14sdp"/>
                                <TextView
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Email"
                                    android:textColor="@android:color/darker_gray"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:textSize="@dimen/_14sdp"/>
                                <TextView
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Registration"
                                    android:textColor="@android:color/darker_gray"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:textSize="@dimen/_14sdp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:orientation="vertical"
                                android:gravity="end"
                                android:layout_height="match_parent">
                                <TextView
                                    android:id="@+id/tvBranchDetailBranchName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:maxLines="1"
                                    android:maxLength="13"
                                    android:ellipsize="end"
                                    android:textColor="@android:color/black"
                                    android:textSize="@dimen/_14sdp" />
                                <TextView
                                    android:id="@+id/tvBranchDetailBranchCode"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:text=""
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:maxLines="1"
                                    android:maxLength="13"
                                    android:ellipsize="end"
                                    android:textColor="@android:color/black"
                                    android:textSize="@dimen/_14sdp" />

                                <TextView
                                    android:id="@+id/tvBranchDetailName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:text=""
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:maxLines="1"
                                    android:maxLength="13"
                                    android:ellipsize="end"
                                    android:textColor="@android:color/black"
                                    android:textSize="@dimen/_14sdp" />

                                <TextView
                                    android:id="@+id/tvBranchDetailMobile"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:textSize="@dimen/_14sdp"/>
                                <TextView
                                    android:id="@+id/tvBranchDetailPhone"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:textSize="@dimen/_14sdp"/>
                                <TextView
                                    android:id="@+id/tvBranchDetailEmail"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:textSize="@dimen/_14sdp"/>
                                <TextView
                                    android:id="@+id/tvBranchDetailRegistration"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:textSize="@dimen/_14sdp"/>

                            </LinearLayout>


                        </LinearLayout>



                    </com.google.android.material.card.MaterialCardView>




                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/gray_bg"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:cardElevation="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp"
                        android:weightSum="1"
                        android:gravity="center_vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="1"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:layout_height="wrap_content"
                                android:text="Address"
                                android:textColor="@android:color/darker_gray"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:textSize="@dimen/_14sdp"/>
                            <TextView
                                android:id="@+id/tvBranchDetailAddress"
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textAlignment="textEnd"
                                android:maxLines="4"
                                android:ellipsize="end"
                                android:textColor="@android:color/black"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:textSize="@dimen/_14sdp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="1"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:orientation="vertical"
                                android:layout_height="match_parent">






                                <TextView
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Country"
                                    android:textColor="@android:color/darker_gray"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:textSize="@dimen/_14sdp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:text="State "
                                    android:textColor="@android:color/darker_gray"
                                    android:textSize="@dimen/_14sdp" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:text="City "
                                    android:textColor="@android:color/darker_gray"
                                    android:textSize="@dimen/_14sdp" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:text="PIN Code "
                                    android:textColor="@android:color/darker_gray"
                                    android:textSize="@dimen/_14sdp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:orientation="vertical"
                                android:gravity="end"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/tvBranchDetailCountry"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:textSize="@dimen/_14sdp"/>

                                <TextView
                                    android:id="@+id/tvBranchDetailState"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:textSize="@dimen/_14sdp"/>
                                <TextView
                                    android:id="@+id/tvBranchDetailCity"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:textSize="@dimen/_14sdp"/>
                                <TextView
                                    android:id="@+id/tvBranchDetailPincode"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/proxima_nova_regular"
                                    android:textSize="@dimen/_14sdp"/>

                            </LinearLayout>
                        </LinearLayout>




                    </LinearLayout>



                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>