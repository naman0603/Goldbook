<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="loginModel"
            type="com.goldbookapp.model.LoginModel" />

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <include layout="@layout/toolbar_layout"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true">


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardAddInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/gray_bg"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="0dp">

                    <TextView
                        android:id="@+id/tvRateItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/proxima_nova_bold"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/_10sdp"
                        android:text="+ Add Information"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_13sdp" />

                </com.google.android.material.card.MaterialCardView>

                <View
                    android:id="@+id/addContOrOther_v1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/black"/>

                <LinearLayout
                    android:id="@+id/ll_addContOrOther_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.55"
                        android:fontFamily="@font/proxima_nova_regular"
                        android:text="Details"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.45"
                        android:fontFamily="@font/proxima_nova_regular"
                        android:text="Specified Rate"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_14sdp" />


                </LinearLayout>

                <View
                    android:id="@+id/addContOrOther_v2"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/black"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewAddInfoAddress"
                    android:clickable="true"
                    android:focusable="true"
                    tools:listitem="@layout/row_tcs_tds_nog_nop"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:focusableInTouchMode="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>




            </LinearLayout>

        </ScrollView>


    </LinearLayout>

</layout>