<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="loginModel"
            type="com.goldbookapp.model.LoginModel" />

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <include layout="@layout/toolbar_layout"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/ll_GR_root"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/gr_tv_companyname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$companyName"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/proxima_nova_regular"
                        android:textSize="@dimen/_16sdp"/>

                    <TextView
                        android:id="@+id/gr_tv_branchname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$branchName"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/proxima_nova_regular"
                        android:textSize="@dimen/_14sdp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Period: $fromDate to $toDate"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/proxima_nova_regular"
                        android:textSize="@dimen/_12sdp"/>

                </LinearLayout>
                <TextView
                    android:id="@+id/spr_stock_total"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 category, 4 items"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:textSize="@dimen/_12sdp"/>
                <View
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@android:color/black"/>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/gr_contact_firstcolumn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Opng Bal.:"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/proxima_nova_bold"
                        android:textSize="@dimen/_12sdp"/>

                    <TextView
                        android:id="@+id/gr_contact_secondcolumn"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="999.999 Dr"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_gravity="bottom"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/proxima_nova_bold"
                        android:textSize="@dimen/_12sdp"/>
                    <TextView
                        android:id="@+id/gr_contact_thirdcolumn"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="₹99,999.00 Dr"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textAlignment="textEnd"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/proxima_nova_bold"
                        android:textSize="@dimen/_12sdp"/>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_gr_cashbankbook"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/row_cashbankbook_report"
                    android:nestedScrollingEnabled="false"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_gr_salepurchase"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/row_salepurchase_report"
                    android:nestedScrollingEnabled="false"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_gr_contact"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/row_contact_trans"
                    android:nestedScrollingEnabled="false"/>
                <View
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@android:color/black"/>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:paddingTop="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total:"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/proxima_nova_bold"
                            android:textSize="@dimen/_12sdp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="F.W.: 9999.999"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_gravity="bottom"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/proxima_nova_bold"
                            android:textSize="@dimen/_12sdp"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="₹99,99,999.00"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textAlignment="textEnd"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/proxima_nova_bold"
                            android:textSize="@dimen/_12sdp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:paddingTop="@dimen/_3sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Closing Bal.:"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/proxima_nova_bold"
                            android:textSize="@dimen/_12sdp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="F.W.: 9999.999"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_gravity="bottom"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/proxima_nova_bold"
                            android:textSize="@dimen/_12sdp"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="₹99,99,999.00"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textAlignment="textEnd"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/proxima_nova_bold"
                            android:textSize="@dimen/_12sdp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:background="@android:color/black"/>
                </LinearLayout>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </LinearLayout>

</layout>