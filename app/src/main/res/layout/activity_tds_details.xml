<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="loginModel"
            type="com.goldbookapp.model.LoginModel" />

    </data>
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_10sdp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <include layout="@layout/toolbar_layout"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardTDS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/gray_bg"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="0dp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/proxima_nova_bold"
                            android:text="Enable Tax Deduction at Source(TDS)?"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_14sdp" />

                        <RadioGroup
                            android:id="@+id/radiogroupTDSNewCust"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/radioTDSNewCustY"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/colorPrimary"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:text="Yes"
                                android:checked="true"
                                android:textColor="@color/drop_down_arrow_color"
                                android:textSize="@dimen/_12sdp" />

                            <RadioButton
                                android:id="@+id/radioTDSNewCustN"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:buttonTint="@color/colorPrimary"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:text="No"
                                android:textColor="@color/drop_down_arrow_color"
                                android:textSize="@dimen/_12sdp" />

                        </RadioGroup>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tvTDSDeductType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Deductee Type">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txtTDSDeductType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/gray_bg"
                                android:clickable="true"
                                android:drawableEnd="@drawable/ic_keyboard_arrow_down_white"
                                android:drawableTint="@color/drop_down_arrow_color"
                                android:focusable="false"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:inputType="textPersonName|textNoSuggestions"
                                android:paddingStart="0dp"
                                android:paddingEnd="0dp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tvTDSPayment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:hint="Nature of Payment">

                            <com.google.android.material.textfield.TextInputEditText
                               android:id="@+id/txtTDSPayment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/gray_bg"
                                android:clickable="true"
                                android:drawableEnd="@drawable/ic_keyboard_arrow_down_white"
                                android:drawableTint="@color/drop_down_arrow_color"
                                android:focusable="false"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:inputType="textPersonName|textNoSuggestions"
                                android:paddingStart="0dp"
                                android:paddingEnd="0dp" />

                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardTcs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/gray_bg"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="0dp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/proxima_nova_bold"
                            android:text="Enable Tax Collection at Source(TCS)?"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_14sdp" />

                        <RadioGroup
                            android:id="@+id/radiogroupTCSNewCust"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/radioTCSNewCustY"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/colorPrimary"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:text="Yes"
                                android:checked="true"
                                android:textColor="@color/drop_down_arrow_color"
                                android:textSize="@dimen/_12sdp" />

                            <RadioButton
                                android:id="@+id/radioTCSNewCustN"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:buttonTint="@color/colorPrimary"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:text="No"
                                android:textColor="@color/drop_down_arrow_color"
                                android:textSize="@dimen/_12sdp" />

                        </RadioGroup>

                        <com.google.android.material.textfield.TextInputLayout
                           android:id="@+id/tvTCSDeductType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Collector Type">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txtTCSCollectorType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/gray_bg"
                                android:clickable="true"
                                android:drawableEnd="@drawable/ic_keyboard_arrow_down_white"
                                android:drawableTint="@color/drop_down_arrow_color"
                                android:focusable="false"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:inputType="textPersonName|textNoSuggestions"
                                android:paddingStart="0dp"
                                android:paddingEnd="0dp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tvTCSNatureGoods"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:hint="Nature of Goods">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txtTCSNatureGoods"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/gray_bg"
                                android:clickable="true"
                                android:drawableEnd="@drawable/ic_keyboard_arrow_down_white"
                                android:drawableTint="@color/drop_down_arrow_color"
                                android:focusable="false"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:inputType="textPersonName|textNoSuggestions"
                                android:paddingStart="0dp"
                                android:paddingEnd="0dp" />

                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>



                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>

        </ScrollView>


    </LinearLayout>
    <com.robertlevonyan.views.customfloatingactionbutton.FloatingActionButton
        android:id="@+id/btnSaveTDSTCSMGMT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_15sdp"
        android:fontFamily="@font/proxima_nova_bold"
        android:padding="@dimen/_5sdp"
        android:text="Save"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_13sdp"
        app:fabRippleColor="@color/gray_text"
        app:fabElevation="5dp"
        app:fabIconPosition="start"
        app:fabSizes="normal"
        app:fabType="circle" />

</RelativeLayout>
</layout>