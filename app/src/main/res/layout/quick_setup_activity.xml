<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="loginModel"
            type="com.goldbookapp.model.LoginModel" />

    </data>

<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

   <!-- <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">-->

        <LinearLayout
            android:id="@+id/llQuickSetup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quick_setup"
                android:textColor="@color/header_black_text"
                android:fontFamily="@font/proxima_nova_bold"
                android:layout_marginTop="@dimen/_30sdp"
                android:textSize="@dimen/header_text_size"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select username of your choice"
                android:textColor="@color/gray_text"
                android:fontFamily="@font/proxima_nova_regular"
                android:textSize="@dimen/_14sdp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtUsernameInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter username"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_keyboard_arrow_down_white_24dp"
                app:endIconTint="@color/drop_down_arrow_color"
                android:layout_marginTop="@dimen/_30sdp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text|textNoSuggestions"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:digits="abcdefghijklmnopqrstuvwxyz0123456789@#-_"
                    android:textAllCaps="false"
                    android:imeOptions="actionDone"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:background="@android:color/white"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/gray_bg"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="0dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Suggestions"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:textSize="@dimen/_14sdp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_marginTop="@dimen/_10sdp"
                        android:id="@+id/recyclerViewSuggestion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

               <!-- <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="example1"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textSize="@dimen/_14sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="example123"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/proxima_nova_regular"
                        android:textSize="@dimen/_14sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="example_12"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/proxima_nova_regular"
                        android:textSize="@dimen/_14sdp"/>-->

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/imgNext"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_next"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="@dimen/_20sdp"/>

        </LinearLayout>

   <!-- </ScrollView>-->

</RelativeLayout>

</layout>