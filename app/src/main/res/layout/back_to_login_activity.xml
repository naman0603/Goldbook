<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="loginModel"
            type="com.goldbookapp.model.LoginModel" />

    </data>

<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/btl_image"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:visibility="visible"
                android:src="@drawable/ic_send_mode"
                app:tint="@color/colorPrimary" />
            <ImageView
                android:id="@+id/bt2_image"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:visibility="gone"
                android:src="@drawable/ic_access_denied"
                app:tint="@color/colorPrimary" />

            <TextView
                android:id="@+id/linkSentEmailSms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/linksentemail"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_gravity="center"
                android:fontFamily="@font/proxima_nova_bold"
                android:layout_marginTop="@dimen/_30sdp"
                android:textSize="@dimen/_18sdp"/>

            <TextView
                android:id="@+id/checkLinkEmailSms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/checklinkemail"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_gravity="center"
                android:fontFamily="@font/proxima_nova_regular"
                android:textSize="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_10sdp"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnBackToLogin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_34sdp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="0dp"
                android:layout_marginTop="@dimen/_30sdp"
                android:focusable="true"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">

                <ImageView
                    android:visibility="gone"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back"/>

                <TextView
                    android:id="@+id/tvBacktoSignIn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Back to Sign In"
                    android:textAlignment="center"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:gravity="center"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>


</RelativeLayout>

</layout>