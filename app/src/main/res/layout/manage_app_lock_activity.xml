<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="loginModel"
            type="com.goldbookapp.model.LoginModel" />

    </data>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

    <include layout="@layout/toolbar_layout"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMplAuth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/gray_bg"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="0dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center_vertical"
            android:visibility="gone">

                <TextView
                    android:id="@+id/tvMplAuth"
                    android:padding="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Two-factor authentication"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:textSize="@dimen/_15sdp"/>

        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMplAppLock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/gray_bg"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="0dp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/tvMplAppLock"
                android:padding="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App Lock"
                android:textColor="@android:color/black"
                android:fontFamily="@font/proxima_nova_regular"
                android:textSize="@dimen/_15sdp"/>

        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMplRemovepin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/gray_bg"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="0dp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvMplRemovepin"
                android:padding="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remove App Lock PIN"
                android:textColor="@android:color/black"
                android:fontFamily="@font/proxima_nova_regular"
                android:textSize="@dimen/_15sdp"/>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
    </LinearLayout>
</layout>