<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="loginModel"
            type="com.goldbookapp.model.LoginModel" />

    </data>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/ll_row_cheque"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:focusableInTouchMode="true"
            android:clickable="true">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSalesItemRowLedgerGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/gray_bg"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_7sdp"
                    android:gravity="center_vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">


                                <ImageView
                                    android:id="@+id/imgRight2editCheque"
                                    android:layout_width="@dimen/_22sdp"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:padding="@dimen/_3sdp"
                                    android:src="@drawable/ic_edit"
                                    android:layout_marginEnd="@dimen/_40sdp"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentEnd="true"/>


                                <ImageView
                                    android:id="@+id/imgRightdelCheque"
                                    android:layout_width="@dimen/_22sdp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:padding="@dimen/_3sdp"
                                    android:src="@drawable/ic_delete_icon"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentEnd="true"/>



                                <TextView
                                    android:id="@+id/tvChequeName"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textColor="@android:color/black"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/proxima_nova_bold"
                                    android:textSize="@dimen/_16sdp"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="Sales of goods"
                                    android:gravity="center_vertical"
                                    android:layout_toStartOf="@id/imgRight2editCheque"/>



                            </RelativeLayout>



                        <LinearLayout
                            android:paddingTop="@dimen/_4sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                android:id="@+id/tvChequeFrom"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:text="SI-INV-01-2020-00001"
                                android:textColor="@android:color/black"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:textSize="@dimen/_12sdp"/>

                            <TextView
                                android:id="@+id/tvChequeTo"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:text="SI-INV-01-2020-00001"
                                android:textColor="@android:color/black"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:textSize="@dimen/_12sdp"/>

                        </LinearLayout>
                        <LinearLayout
                            android:paddingTop="@dimen/_4sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="1">

                            <TextView
                                android:id="@+id/tvChequeTotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@android:color/black"
                                android:fontFamily="@font/proxima_nova_regular"
                                android:textSize="@dimen/_12sdp"/>


                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </RelativeLayout>

</layout>