<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="loginModel"
            type="com.goldbookapp.model.LoginModel" />

    </data>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <include android:id="@+id/toolbar"
        layout="@layout/toolbar_layout"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verify your password"
                android:layout_gravity="center"
                android:textColor="@color/header_black_text"
                android:fontFamily="@font/proxima_nova_bold"
                android:layout_marginTop="@dimen/_30sdp"
                android:textSize="@dimen/header_text_size"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Re-enter your Goldbook password\nto continue."
                android:textColor="@color/gray_text"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/proxima_nova_regular"
                android:textSize="@dimen/_14sdp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tvPasswordInputLayout"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password"
                app:passwordToggleEnabled="true"
                app:passwordToggleDrawable="@drawable/eye_passoword"
                app:passwordToggleTint="@color/colorPrimary"
                android:layout_marginTop="@dimen/_30sdp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtPasswordVerify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:inputType="textPassword|textNoSuggestions"
                    android:fontFamily="@font/proxima_nova_regular"
                    android:background="@android:color/white"/>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_34sdp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="0dp"
                android:layout_marginTop="@dimen/_30sdp"
                android:focusable="true"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/next"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"
                    android:fontFamily="@font/proxima_nova_bold"
                    android:gravity="center"/>


            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

</LinearLayout>

</layout>