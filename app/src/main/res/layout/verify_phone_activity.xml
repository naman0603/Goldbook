<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="loginModel"
            type="com.goldbookapp.model.LoginModel" />

    </data>

<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verify your\nIdentity"
                android:gravity="center"
                android:textColor="@color/header_black_text"
                android:fontFamily="@font/proxima_nova_bold"
                android:layout_marginTop="@dimen/_40sdp"
                android:textSize="@dimen/header_text_size"/>

            <TextView
                android:id="@+id/tvMobileNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/black"
                android:gravity="center"
                android:fontFamily="@font/proxima_nova_regular"
                android:layout_marginTop="@dimen/_20sdp"
                android:textSize="@dimen/_14sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile OTP"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_gravity="start"
                android:fontFamily="@font/proxima_nova_regular"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:textSize="@dimen/_14sdp"/>

            <com.mukesh.OtpView
                android:id="@+id/otp_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:inputType="number"
                android:itemBackground="#fcefdc"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_16sdp"
                android:fontFamily="@font/proxima_nova_bold"
                app:OtpItemCount="4"
                app:OtpViewType="rectangle"
                app:OtpItemRadius="@dimen/_5sdp"
                android:textSelectHandle="@drawable/rectshape"
                app:OtpLineWidth="0dp"
                app:OtpItemSpacing="@dimen/_20sdp"
                android:focusable="true"
                android:focusableInTouchMode="true"/>

            <TextView
                android:id="@+id/tvEmailVerify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email OTP"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_gravity="start"
                android:fontFamily="@font/proxima_nova_regular"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:textSize="@dimen/_14sdp"/>

            <com.mukesh.OtpView
                android:id="@+id/otp_view_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:inputType="number"
                android:itemBackground="#fcefdc"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_16sdp"
                android:fontFamily="@font/proxima_nova_bold"
                app:OtpItemCount="4"
                app:OtpViewType="rectangle"
                app:OtpItemRadius="@dimen/_5sdp"
                android:textSelectHandle="@drawable/rectshape"
                app:OtpLineWidth="0dp"
                app:OtpItemSpacing="@dimen/_20sdp"
                android:focusable="true"
                android:focusableInTouchMode="true"/>

            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:59"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:fontFamily="@font/proxima_nova_regular"
                android:layout_marginTop="@dimen/_40sdp"
                android:textSize="@dimen/_14sdp"/>

            <TextView
                android:id="@+id/tvDidNotReceiveCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Didn't receive any code?"
                android:textColor="@color/gray_text"
                android:gravity="center"
                android:fontFamily="@font/proxima_nova_regular"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_14sdp"/>

            <TextView
                android:id="@+id/tvResendOTP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resend OTP"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/yellow_text"
                android:gravity="center"
                android:fontFamily="@font/proxima_nova_bold"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_14sdp"/>


            <Space
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/imgVerifyOtp"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_next"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="@dimen/_10sdp"/>
        </LinearLayout>


    </ScrollView>

</RelativeLayout>

</layout>